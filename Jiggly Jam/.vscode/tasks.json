{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build (Release) with SFML",
      "type": "shell",
      "command": "g++",
      "args": [
        "-O2",
        "-std=c++17",
        "${fileBasenameNoExtension}.cpp",
        "-o",
        "${fileBasenameNoExtension}",
        "-lsfml-graphics",
        "-lsfml-window",
        "-lsfml-system"
      ],
      "problemMatcher": ["$gcc"],
      "group": "build"
    },
    {
      "label": "Run Application",
      "type": "shell",
      "command": "./${fileBasenameNoExtension}",
      "group": "build"
    }
  ]
}
