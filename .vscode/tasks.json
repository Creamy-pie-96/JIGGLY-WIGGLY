{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build (Release) with SFML",
      "type": "shell",
      "command": "sh",
      "args": [
        "-c",
        "g++ -O2 -std=c++17 \"${file}\" -o \"${fileDirname}/${fileBasenameNoExtension}\" $(pkg-config --cflags --libs sfml-graphics sfml-window sfml-system)"
      ],
      "problemMatcher": ["$gcc"],
      "group": "build"
    },
    {
      "label": "Run Application",
      "type": "shell",
      "command": "sh",
      "args": ["-c", "exec \"${fileDirname}/${fileBasenameNoExtension}\""],
      "group": "build"
    }
    ,
    {
      "label": "Run Demo (fixed)",
      "type": "shell",
      "command": "sh",
      "args": ["-c", "exec \"${workspaceFolder}/Jiggly Jam/demo_jelly\""],
      "group": "build"
    }
  ]
}
